{
  "name": "lion-chat",
  "version": "1.0.8",
  "type": "module",
  "main": "./dist/umd/lion-chat.umd.cjs",
  "module": "./dist/es/lion-chat.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es/lion-chat.js",
      "require": "./dist/umd/lion-chat.umd.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./dist/": {
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "sideEffects": [
    "./dist/index.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-s clean build:vite:umd build:vite:es move-style",
    "build:esm": "rollup --config build/rollup.esm.config.js",
    "build:umd": "rollup --config build/rollup.umd.config.js",
    "build:vite:umd": "vite build --config ./vite.config.umd.ts",
    "build:vite:es": "vite build --config ./vite.config.es.ts",
    "move-style": "move-file dist/es/index.css dist/index.css",
    "clean": "rimraf dist",
    "release": "release-it",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@microsoft/fetch-event-source": "^2.0.1",
    "axios": "^1.6.7",
    "md-editor-v3": "^4.21.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "typed.js": "^2.1.0",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0",
    "vue-typed-js": "^0.1.2"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.24",
    "@vitejs/plugin-vue": "^5.0.4",
    "lodash-es": "^4.17.21",
    "move-file-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^17.10.0",
    "rimraf": "^6.0.1",
    "sass": "^1.71.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^4.3.0",
    "vue-tsc": "^1.8.27"
  },
  "release-it": {
    "npm": {
      "publish": true
    }
  }
}
